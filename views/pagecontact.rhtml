<%= erb :header %>

  <form name="pagecontact" method="POST">
    <h2>Group</h2>

    <select name="contact">
      <% @contacts.each do |contact| %>
        <option value=<%= contact.id %>><%= contact.name %></option>
      <% end %>
    </select>

    <input type="submit" value="Send" /><br />
    <h2>Message</h2>
    <textarea name="body" COLS=40 ROWS=6></textarea>
  </form>

<%= erb :footer %>
